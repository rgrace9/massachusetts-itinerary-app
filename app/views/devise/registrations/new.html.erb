<div class="user-form">
<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.text_field :first_name, :placeholder => "First Name"  %>
  </div>

  <div class="field">
    <%= f.text_field :last_name, :placeholder => "Last Name" %>
  </div>

  <div class="field">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", :placeholder => "Email" %>
  </div>

  <div class="field">
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", :placeholder => "Password" %>
  </div>

  <div class="field">
    <%= f.password_field :password_confirmation, autocomplete: "new-password", :placeholder => "Password Confirmation" %>
  </div>

  <div class="field">
    <%= f.file_field :profile_photo%>
  </div>

  <div class="actions">
    <%= f.submit "Sign up", :class=>'button button-signup' %>
  </div>
<% end %>


<%= render "devise/shared/links" %>
</div>
